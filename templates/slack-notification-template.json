{
  "name": "Slack Notification",
  "type": "n8n-nodes-base.slack",
  "typeVersion": 2.1,
  "position": [600, 300],
  "parameters": {
    "authentication": "accessToken",
    "resource": "message",
    "operation": "post",
    "channel": "#network-alerts",
    "text": "ðŸš¨ {{$parameter.alert_type}} Alert: {{$parameter.message}}",
    "blocks": [
      {
        "type": "section",
        "text": {
          "type": "mrkdwn",
          "text": "*{{$parameter.alert_type}} Alert*\n{{$parameter.message}}"
        }
      },
      {
        "type": "section",
        "fields": [
          {
            "type": "mrkdwn",
            "text": "*Device:*\n{{$parameter.device_name || 'Unknown'}}"
          },
          {
            "type": "mrkdwn", 
            "text": "*Time:*\n{{$now}}"
          },
          {
            "type": "mrkdwn",
            "text": "*Severity:*\n{{$parameter.severity || 'Medium'}}"
          },
          {
            "type": "mrkdwn",
            "text": "*Workflow:*\n{{$workflow.name}}"
          }
        ]
      }
    ],
    "attachments": []
  },
  "description": "Standard Slack notification template with structured message formatting"
}