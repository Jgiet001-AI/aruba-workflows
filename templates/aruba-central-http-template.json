{
  "name": "Aruba Central API Request",
  "type": "n8n-nodes-base.httpRequest",
  "typeVersion": 4.1,
  "position": [400, 300],
  "parameters": {
    "url": "https://{{$credentials.region}}.central.arubanetworks.com/api/v2/{{$parameter.endpoint}}",
    "authentication": "predefinedCredentialType",
    "nodeCredentialType": "arubaApi",
    "sendHeaders": true,
    "headerParameters": {
      "parameters": [
        {
          "name": "Content-Type",
          "value": "application/json"
        },
        {
          "name": "Accept",
          "value": "application/json"
        }
      ]
    },
    "options": {
      "timeout": 30000,
      "retry": {
        "enabled": true,
        "maxTries": 3,
        "waitBetweenTries": 2000
      },
      "redirect": {
        "followRedirects": true,
        "maxRedirects": 3
      },
      "response": {
        "fullResponse": false,
        "responseFormat": "autodetect"
      }
    }
  },
  "description": "Standard HTTP request template for Aruba Central API calls with built-in retry logic and error handling"
}